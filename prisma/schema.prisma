generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model SequelizeMeta {
  name String @id @db.VarChar(255)
}

model lead_messages {
  id         String   @id @default(uuid()) @db.Uuid
  lead_id    Int?
  contact_id Int      @default(0)
  messages   Json[]   @db.Json
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @updatedAt @db.Timestamptz(6)
  lead       leads?   @relation(fields: [lead_id], references: [lead_id], onDelete: Cascade)
}

model leads {
  id            String          @id @default(uuid()) @db.Uuid
  lead_id       Int             @unique
  contact_id    Int             @default(0)
  data          Json?           @db.Json
  created_at    DateTime        @default(now()) @db.Timestamptz(6)
  updated_at    DateTime        @default(now()) @updatedAt @db.Timestamptz(6)
  threads       thread[]
  lead_messages lead_messages[]
}

model thread {
  id         String   @id @default(uuid()) @db.Uuid
  lead_id    Int
  thread_id  String   @unique @db.VarChar(255)
  run_id     String   @default("") @db.VarChar(255)
  assistant  String   @db.VarChar(255)
  messages   Json[]   @db.Json
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @updatedAt @db.Timestamptz(6)
  leads      leads    @relation(fields: [lead_id], references: [lead_id], onDelete: Cascade)

  @@unique([lead_id, assistant])
}
